{
    "$schema": "https://json-schema.org/schema#",
    "$id": "http://odow.github.io/SDDP.jl/sof.schema.json",
    "title": "The schema for a policy graph representation of a multistage stochastic program",
    "type": "object",
    "required": ["root", "nodes", "edges"],
    "properties": {
        "root": {
            "description": "An object for the root node.",
            "type": "object",
            "required": ["name", "states"],
            "properties": {
                "name": {
                    "description": "The name of the root node, to be used in `edges`.",
                    "type": "string"
                },
                "states": {
                    "description": "A vector of state variables.",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": ["name", "initial_value"],
                        "properties": {
                            "name": {
                                "description": "A unique name for the state variable.",
                                "type": "string"
                            },
                            "initial_value": {
                                "description": "The value of the state variable at the root node.",
                                "type": "number"
                            }
                        }
                    }
                }
            }
        },
        "nodes": {
            "description": "An array of nodes in the policy graph.",
            "type": "array",
            "items": {
                "$ref": "#/definitions/node"
            }
        },
        "edges": {
            "description": "An array of edges in the policy graph.",
            "type": "array",
            "items": {
                "$ref": "#/definitions/edge"
            }
        }
    },
    "test_data": {
        "type": "array",
        "items": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "node": {
                        "type": "string"
                    },
                    "support": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "value": {
                                    "type": "number"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "edge": {
            "description": "An edge in the policy graph, describing a transition from node `from` to node `to` with probability `probability`.",
            "type": "object",
            "required": ["from", "to", "probability"],
            "properties": {
                "from": {
                    "type": "string"
                },
                "to": {
                    "type": "string"
                },
                "probability": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1
                }
            }
        },
        "node": {
            "description": "An node in the policy graph.",
            "type": "object",
            "required": ["name", "states", "subproblem"],
            "properties": {
                "name": {
                    "description": "A unique name for the node, to use used in `edges`.",
                    "type": "string"
                },
                "subproblem": {
                    "description": "The basic subproblem in MathOptFormat.",
                    "$ref": "https://github.com/odow/MathOptFormat/blob/v0.4.0/mof.schema.json"
                },
                "states": {
                    "description": "An array of objects that map the name of the state variable to the incoming and outgoing state variables in the MathOptFormat file.",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": ["name", "in", "out"],
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "in": {
                                "type": "string"
                            },
                            "out": {
                                "type": "string"
                            }
                        }
                    }
                },
                "noise_terms": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": ["probability", "support"],
                        "properties": {
                            "probability": {
                                "type": "number",
                                "minimum": 0,
                                "maximum": 1
                            },
                            "support": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "required": ["parameter", "value"],
                                    "properties": {
                                        "parameter": {
                                            "type": "string"
                                        },
                                        "value": {
                                            "type": "number"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
